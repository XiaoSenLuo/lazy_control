{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make -j build",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "make monitor",
            "type": "shell",
            "command": "make monitor",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": []
        },
        {
            "label": "erase chip",
            "type": "shell",
            "command": "make erase",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": []
        }
    ]
}
